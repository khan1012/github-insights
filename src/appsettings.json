{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "GitHubInsights": "Debug"
    }
  },
  "AllowedHosts": "*",
  "GitHub": {
    "Organization": "microsoft",
    "Token": "",
    "CacheDurationMinutes": 5,
    "MaxRepositories": 100,
    "MaxRepositoriesForContributorAnalysis": 20
  },
  "Performance": {
    "MaxConcurrentRequests": 10,
    "HealthCheckStaleDays": 180,
    "HealthCheckAttentionDays": 30,
    "ActivityScoreStarsWeight": 10,
    "ActivityScoreForksWeight": 5,
    "ActivityScoreIssuesWeight": 2,
    "ActivityScoreRecentUpdateBonus": 1000
  },
  "Resilience": {
    "MaxRetries": 3,
    "BaseDelaySeconds": 2,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationSeconds": 60,
    "TimeoutSeconds": 30
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5281",
      "https://localhost:7053"
    ]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  }
}
